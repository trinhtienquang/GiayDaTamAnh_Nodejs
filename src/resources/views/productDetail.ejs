<%- include('partials/header') %>

<section class="direct">
  <div class="container">
    <ol class="breakcumb">
      <% breadcrumb.forEach(function(item, index) { %>
      <li>
        <a href="<%= item.url %>"><span><%= item.name %></span></a>
      </li>
      <% }) %>
    </ol>
  </div>
</section>

<section class="product_overview">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-xs-12 col-md-6">
        <div class="images">
          <div class="big_img">
            <img src="/uploads/<%=product.sanpham_anh%>" alt="" style="max-height: 575px; width: 100%;">
          </div>
          <div class="small_img">
            <div class="slider_img">
              <% images.forEach(image => { %>
              <p>
                <img src="/uploads/<%=image.sanpham_anh%>" alt="" class="img-fluid" style="max-height: 124px; width: 100%;">
              </p>
              <%})%>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-5 col-md-offset-1">
        <div class="product-summary">
          <h1 class="product_title"><%=product.sanpham_ten%> <%=product.sanpham_ma%></h1>
          <div class="product_details">
            <%-product.sanpham_gioithieu%>
          </div>
          <div class="product_priece">
            <p><%-Number(product.sanpham_gia).toLocaleString('vi-VN')%> <span>₫</span></p>
          </div>
          <div class="cart">
            <div class="quantity-custom ">
              <div id="buy-amount" class="d-flex">
                <button class="btn-minus" onclick="minusHandleClick()">
                  <i class="ph-minus"></i>
                </button>
                <input type="text" name="soluong" id="soluong" value="1">
                <button class="btn-plus" onclick="plusHandleClick()">
                  <i class="ph-plus"></i>
                </button>
              </div>
              <div class="list-sizes">
                <ul id="choose-size">
                  <% sizes.forEach(size => {%>
                  <li>
                    <span><%=size.sanpham_size%></span>
                  </li>
                  <%})%>
                </ul>
              </div>
            </div>
            <button class="btn-addcart" data-product-quantity="document.getElementById('soluong').value">
              Thanh toán ngay
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

